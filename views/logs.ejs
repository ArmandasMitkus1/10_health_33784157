<!DOCTYPE html>
<html>
<head>
  <title><%= pageTitle %></title>
</head>
<body>
  <h1>Workout Logs for <%= username %></h1>

  <% if (workouts.length === 0) { %>
    <p>No workouts recorded yet.</p>
  <% } else { %>
    <table border="1" cellpadding="8">
      <tr>
        <th>Date</th>
        <th>Type</th>
        <th>Duration (min)</th>
        <th>Notes</th>
      </tr>
      <% workouts.forEach(w => { %>
        <tr>
          <td><%= w.workout_date.toISOString().slice(0,10) %></td>
          <td><%= w.type %></td>
          <td><%= w.duration_minutes %></td>
          <td><%= w.notes %></td>
        </tr>
      <% }) %>
    </table>
  <% } %>

  <p><a href="/add_workout">Add New Workout</a></p>
</body>
</html>
